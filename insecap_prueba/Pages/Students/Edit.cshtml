@page
@model insecap_prueba.Pages.Students.EditModel
@{
}

<br />
<h2> Edit a student</h2>

@if (Model.errMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismisible fade show" role="alert">
        <strong>@Model.errMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="POST">
    <input type="hidden" name="id" value="@Model.student.id" />
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Rut</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="rut" value="@Model.student.rut"
                   placeholder="Ex: 12345678-9"
                   required />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Nombre</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.student.name"
                   placeholder="Ex:Arturo Prat"
                   required />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Cumpleaños</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="birthday" value="@Model.student.birthday"
                   placeholder="DD/MM/YYYY"
                   required />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Genero</label>
        <select name="gender">
            <option value="Masculino">Masculino</option>
            <option value="Femenino">Femenino </option>
            <option value="No binario">No binario</option>
            <option value="omit">Prefiero no decirlo</option>
        </select>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismisible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">Close</button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Aceptar</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>